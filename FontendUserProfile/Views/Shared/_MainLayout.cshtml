@{
    Layout="_MasterLayout";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    @await Component.InvokeAsync("Sidebar")
                </div>
            </div>
            <div class="col-sm-9 padding-right">
                @RenderBody()
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    @RenderSection("Scripts",false)
}

@section Styles
{
    @RenderSection("Styles", required: false)
}